<head>
    <link rel="stylesheet" href="/public/css/2_lobby.css"> 
</head>

<!-- /PARTE PRINCIPAL -->
<main class="background-main">
    <div class="BodyCenterLobby">

        <div class="container mb-4 text-center">
            <h1 class="titulo" style="text-transform: uppercase;">Bienvenido {{ user.username }}</h1>
        </div>

        <!-- CONTENEDOR FILA 1 -->
        <div id="container-reponsive" class="row">
                
<!-- ------------------------------- COLUMNA 1 ------------------------------- -->
            <div class="col">
                <div class="row">
                    <!-- TITULO -->
                    <div>
                        <strong class="titulo letraTitulos">Funko:</strong>
                    </div>
                    <!-- SLIDE-CONTAINER -->
                    <div class="slideshow-container">
                        <!--FUNKO 1--> 
                        <div class="mySlides">
                            <img class="imgFunko" src="/public/img/figure01.png" draggable="true">
                        </div>

                        <!--FUNKO 2-->
                        <div class="mySlides">
                            <img class="imgFunko" src="/public/img/figure02.png" draggable="true">
                        </div>

                        <!--FUNKO 3-->
                        <div class="mySlides">
                            <img class="imgFunko" src="/public/img/figure03.png" draggable="true">
                        </div>

                        <!--FUNKO 4-->
                        <div class="mySlides">
                            <img class="imgFunko" src="/public/img/figure04.png" draggable="true">
                        </div>

                        <!-- FLECHAS: ANTERIOR, POSTERIOR -->
                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                        
                        <!-- BOTONES DE SELECCIÓN -->
                        <div style="text-align: center;">
                            <span class="dot" onclick="currentSlide(1)"></span>
                            <span class="dot" onclick="currentSlide(2)"></span>
                            <span class="dot" onclick="currentSlide(3)"></span>
                            <span class="dot" onclick="currentSlide(4)"></span>
                        </div>
                    </div> <!-- SLIDE-CONTAINER -->
                </div>
            </div> <!-- /CONTENEDOR ESCOGE TU FUNKO -->


<!-- ------------------------------- COLUMNA 2 ------------------------------- -->
            <div class="col">
                <div class="row pb-1">
                    <!-- TITULO -->
                    <div>
                        <strong class="titulo letraTitulos">Salas:</strong>
                    </div>

                    <!-- SALAS -->
                    <div class="scrollbar-salas">
                        <!--Sala 1-->
                        <div class="contenedorSalas">
                            <div class="col-12">
                                <!-- Contenedor-principal-sala -->
                                <div class="sala">
                                    <div class="contendorRecibeFunko"><p class="titulo">Pull here</p></div>
                                    <div class="contendorRecibeFunko"><p class="titulo">Pull here</p></div>
                                    <div class="contendorRecibeFunko"><p class="titulo">Pull here</p></div>
                                    <div class="contendorRecibeFunko"><p class="titulo">Pull here</p></div>
                                </div>
                                <!-- Número de sala -->
                                <button type="button" class="titulo btn btn-secondary col-12">
                                    <div class=" subtitulo">Sala Nº:</div>
                                </button>
                                <!-- Barra de capacidad -->
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                                        style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Sala 2-->
                        <div class="contenedorSalas">
                            <div class="col-12">
                                <!-- Contenedor-principal-sala -->
                                <button type="button" class="subtitulo btn btn-primary col-12 sala">
                                    <div class="titulo"> Sala 2</div>
                                </button>
                                <!-- Número de sala -->
                                <button type="button" class=" btn btn-secondary col-12">
                                    <div class=" subtitulo">Capacidad Sala:</div>
                                </button>
                                <!-- Barra de capacidad -->
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                                        style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Sala 3-->
                        <div class="contenedorSalas">
                            <div class="col-12">
                                <!--Boton 1-->
                                <button type="button" class="subtitulo btn btn-primary col-12 sala">
                                    <div class="titulo"> Sala 3</div>
                                </button>
                                <!--elemento muestra aforo sala-->
                                <button type="button" class="btn btn-secondary col-12">
                                    <div class=" subtitulo">Capacidad Sala:</div>
                                </button>
                                <div class="progress">
                                    <div class="barra progress-bar progress-bar-striped bg-info" role="progressbar"
                                        style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Sala 4-->
                        <div class="contenedorSalas">
                            <div class="col-12">
                                <!--Boton 1-->
                                <button type="button" class="subtitulo btn btn-primary col-12 sala">
                                    <div class="titulo"> Sala 4</div>
                                </button>
                                <!--elemento muestra aforo sala-->
                                <button type="button" class="btn btn-secondary col-12">
                                    <div class=" subtitulo">Capacidad Sala:</div>
                                </button>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                                        style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Sala 5-->
                        <div class="contenedorSalas">
                            <div class="col-12">
                                <!--Boton 1-->
                                <button type="button" class="subtitulo btn btn-primary col-12 sala">
                                    <div class="titulo"> Sala 5</div>
                                </button>
                                <!--elemento muestra aforo sala-->
                                <button type="button" class="btn btn-secondary col-12">
                                    <div class=" subtitulo">Capacidad Sala:</div>
                                </button>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                                        style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- /CONTENEDOR SALAS -->
        </div> <!-- /CONTENEDOR FILA 1 -->
        
    <!-- ----------------------------------------------------------------------------- -->
    <hr class="solid">
    <!-- ----------------------------------------------------------------------------- -->        
        
        <!-- SEGUNDA FILA -->  
        <div class="container-xxl">
            <div class="row pt-2 gap-5">

                <!-- BOTÓN SCORE -->  
                <div class="col-sm text-center" style="border-style: inset;">       
                        <h3 class="text-uppercase" style="color: white">NIVEL-3.1: <span style="font-size: 20px">MODIFICACIÓN Y ALMACENADO EN BBDD DE UNA ACCIÓN EFECTUADA EN UN MISMO ELEMENTO: (API REST + AJAX + XHR)</span></h3>
                    <p id="score-incrementable" style="font-size: 100px">{{{user.score}}}</p>
                    <button class="btn btn-primary mb-2" type="button" onclick="incrementButtonScore()">AUMENTAR SCORE</button>                                                                
                </div> <!-- /BOTÓN SCORE -->  

                <!-- BOTÓN NUEVA SALA -->
                <div class="col-sm text-center" style="border-style: inset;">       
                        <h3 style="color: white">NIVEL-3.2: <span style="font-size: 20px">MODIFICACIÓN Y ALMACENADO EN BBDD DE UNA ACCIÓN EFECTUADA EN UN MISMO ELEMENTO: (CON WEBSOCKETS)</span></h3>
                    <p id="salas-incrementable" style="font-size: 100px">0</p>
                    <button id ="send-score" class="btn btn-primary mb-2" type="button" onclick="incrementButtonSalas()">CREAR NUEVA SALA</button>                                                                
                </div> <!-- /BOTÓN NUEVA SALA -->  

                <script src="/public/js/clases/incrementScore.js"></script>

            </div>
        </div> <!-- /SEGUNDA FILA -->

    <!-- ----------------------------------------------------------------------------- -->
    <hr class="solid">
    <!-- ----------------------------------------------------------------------------- -->

        <!-- TERCERA FILA --> 
        <div class="row">
            <div class="container-xxl">
                <div class="col-md-4 mx-auto">
                    <div class="card text-center">
                        <div class="card-header">
                            <h3>NIVEL-2: <span style="font-size: 20px">CREAR ELEMENTOS CON ENRAUTAMIENTO INTERNO (API-REST + AJAX)</span></h3>
                        </div>

                        <!-- NOTAS CON ENRAUTAMIENTO INTERNO + AJAX -->
                        <div class="card-body">
                            <form action="/notes/new-note" method="POST">
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control" placeholder="Title"/>
                                </div>
                                <div class="form-group">
                                    <textarea name="description" class="form-control mt-3" placeholder="Description"></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block mt-2" type="submit">
                                        Agregar nueva nota
                                    </button>
                                </div>
                            </form>
                            <a href="/notes">
                                <button class="btn btn-primary btn-block mt-2" type="button">
                                    Ver todas las notas
                                </button>
                            </a>
                        </div><!-- /NOTAS CON ENRAUTAMIENTO INTERNO -->
                    </div>
                </div>
            </div> <!-- /SEGUNDA FILA -->
        </div> 

    <!-- ----------------------------------------------------------------------------- -->
    <hr class="solid">
    <!-- ----------------------------------------------------------------------------- -->

    <!-- CUARTA FILA --> 
        <div class="row pt-1">
            <div class="container-xxl">
                <div class="col-md-4 mx-auto">
                    <div class="card text-center">
                        <div class="card-header">
                            <h3>NIVEL-1: <span style="font-size: 20px">CREAR ELEMENTOS CON ENRAUTAMIENTO EXTERNO (API-REST)</span></h3>
                        </div>

                        <!-- NOTAS CON ENRAUTAMIENTO EXTERNO -->
                        <div class="card-body">
                            <form action="/notes/agregarNota" method="POST">
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control" placeholder="Title"/>
                                </div>
                                <div class="form-group">
                                    <textarea name="description" class="form-control mt-3" placeholder="Description"></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block mt-2" type="submit">
                                        Agregar nueva nota
                                    </button>
                                </div>
                            </form>
                            <a href="/notes/mostrarNotas">
                                <button class="btn btn-primary btn-block mt-2" type="button">
                                    Ver todas las notas
                                </button>
                            </a>
                        </div><!-- /NOTAS CON ENRAUTAMIENTO INTERNO -->
                    </div>
                </div>
            </div> <!-- /SEGUNDA FILA -->
        </div> 


    </div>
</main> <!-- /PARTE PRINCIPAL -->

